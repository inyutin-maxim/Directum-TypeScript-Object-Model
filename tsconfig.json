{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "target": "es5",
    "outDir": "Cover/js",
    "inlineSourceMap": true,
    "rootDirs": [
      "src"
    ],
    "watch": true
  },
  "exclude": [
    "node_modules",
    "Directum"
  ]
}